{
    "title": "Blank",
    "version": "1.00",
    "doctype": "HTML5", /* HTML5, XHTML1_STRICT, XHTML1_TRANSITIONAL, XHTML1_FRAMESET, HTML4_STRICT, HTML4_TRANSITIONAL, HTML4_FRAMESET  */
    "thumbnail": "thumbnail.png",
    "author": "ImpressPages",
    "widget": { /* Image cropping settings for widgets. Require theme reinstall to take affect. */
        "image": {
            "width": 1180,
            "height": 400,
            "bigWidth": 800, /* Lightbox */
            "bigHeight": 600 /* Lightbox */
        },
        "imageGallery": {
            "width": 295,
            "height": 164,
            "bigWidth": 800, /* Lightbox */
            "bigHeight": 600 /* Lightbox */
        },
        "logoGallery": {
            "width": 295,
            "height": 295
        },
        "textImage": {
            "width": 380,
            "height": 600, /* height is flexible, setting the max */
            "bigWidth": 800, /* Lightbox */
            "bigHeight": 600 /* Lightbox */
        }
    },
    "options": [
        {
            "label": "Text color",
            "name": "textColor",
            "type": "color",
            "default": "#000"
        },
        {
            "label": "Link color",
            "name": "linkColor",
            "type": "color",
            "default": "#019bd4"
        },
        {
            "label": "Body background color",
            "name": "bodyBackgroundColor",
            "type": "color",
            "default": "#fff"
        },
        {
            "label": "Content background color",
            "name": "backgroundColor",
            "type": "color",
            "default": "#fff"
        },
        {
            "label": "Lightbox style",
            "name": "lightboxStyle",
            "type": "select",
            "default": "2",
            "values": [1, 2, 3, 4, 5]
        },
        {
            "label": "Homepage blocks",
            "name": "homeBlocks",
            "type": "select",
            "default": 3,
            "values": [0, 2, 3, 4]
        },
        {
            "label": "Homepage blocks 2",
            "name": "homeBlocks2",
            "type": "select",
            "default": 2,
            "values": [0, 2, 3, 4]
        }
    ]

}
